# 應用程式設定
APP_NAME=InduSpect AI Backend
DEBUG=true

# 資料庫連線 (本地開發用 SQLite，生產環境用 Cloud SQL)
# Docker Compose 預設設定
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/induspect

# AI API Keys
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=  # 選填，若使用 OpenAI Embedding

# Embedding 設定
EMBEDDING_PROVIDER=gemini
EMBEDDING_MODEL=text-embedding-004
EMBEDDING_DIMENSION=768

# GCP 設定
GCS_BUCKET_NAME=induspect-files
GCP_PROJECT_ID=your-gcp-project-id

# RAG 設定
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
